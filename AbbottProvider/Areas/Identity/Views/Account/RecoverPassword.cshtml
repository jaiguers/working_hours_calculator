@model AbbottProvider.Areas.Identity.Models.ViewModels.RecoverPasswordVM
@{
    ViewData["Title"] = "Recuperar Password";
    Layout = "_layout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/Identity/Account/Login"><b>Gestor</b>documental</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Recupera tu password.</p>

            <form asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" method="POST" enctype="multipart/form-data">
                @Html.ValidationSummary(false)
                @Html.HiddenFor(m => m.UserId)
                @Html.HiddenFor(m => m.RecoverToken)
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.RepeatPassword, new { @class = "form-control", @placeholder = "Password" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.RepeatPassword)
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Solicitar nuevo password</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <p class="mt-3 mb-1">
                <a href="/Identity/Account/Login">Login</a>
            </p>

        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->
